<div className="card w-100 rounded" style={{ marginTop: "150px" }}>
  {/* Header Section with Title and Back Button */}
  <div
    className="card-header text-white p-2 d-flex justify-content-between align-items-center text-uppercase"
    style={{ backgroundColor: "#2CB3D1" }}
  >
    <b>Bet History</b>
    <span style={{ cursor: "pointer" }} title="Back" onClick={() => SetComponent("ProfitAndLossRunner")}>
      <i className="fas fa-arrow-left"></i>
    </span>
  </div>

  {/* Button Section for Filtering Bets (Back, Lay, Void) */}
  <div className="m-1 row g-2 justify-content-end">
    <div className="col-auto">
      <button className="btn text-white fw-bold" style={{ backgroundColor: "#80C2F1" }}>Back</button>
    </div>
    <div className="col-auto">
      <button className="btn text-white fw-bold" style={{ backgroundColor: "#FAA9BA" }}>Lay</button>
    </div>
    <div className="col-auto">
      <button className="btn btn-light fw-bold">Void</button>
    </div>
  </div>

  {/* Main Table Section */}
  <div className="table-responsive">
    <table className="table lms_table_active3 table-bordered text-center">
      <thead>
        <tr style={{ backgroundColor: "#e6e9ed", color: "#5562a3" }}>
          <th><b>Sport Name</b></th>
          <th><b>Event Name</b></th>
          <th><b>Market Name</b></th>
          <th><b>Selection Name</b></th>
          <th><b>Bet Type</b></th>
          <th><b>User Price</b></th>
          <th><b>Amount</b></th>
          <th><b>Profit/Loss</b></th>
          <th><b>Place Date</b></th>
          <th><b>Match Date</b></th>
        </tr>
      </thead>
      <tbody>
        {/* If Data Exists */}
        {data?.data?.length > 0 ? (
          data?.data?.map((bet, index) => (
            <tr key={index}>
              <td>{bet?.gameName}</td>
              <td className="text-primary fw-bold" style={{ cursor: "pointer" }}>
                {bet?.marketName}
              </td>
              <td>{"Winner"}</td>
              <td>{bet?.runnerName}</td>
              <td>{bet?.type}</td>
              <td>{bet?.rate}</td>
              <td>{bet?.value}</td>
              <td>
                <span className="text-success mx-1">{bet?.bidAmount}</span>
                <span className="text-danger">(-{bet?.value})</span>
              </td>
              <td>{formatDate(bet?.placeDate)}</td>
              <td>{formatDate(bet?.matchDate)}</td>
            </tr>
          ))
        ) : (
          // If No Data is Found
          <tr>
            <td colSpan="10">
              <div className="alert alert-info fw-bold" role="alert">
                No Data Found !!
              </div>
            </td>
          </tr>
        )}
      </tbody>
    </table>
  </div>

  {/* Pagination */}
  {data?.data?.length > 0 && (
    <div className="d-flex justify-content-center p-2">
      <Pagination
        currentPage={data.currentPage}
        totalPages={data.totalPages}
        handlePageChange={handlePageChange}
        startIndex={startIndex}
        endIndex={endIndex}
        totalData={data.totalData}
      />
    </div>
  )}
</div>
